<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"		android:gravity="center"
    android:orientation="vertical" 	android:background="@drawable/bkg_img_default">
	
    <com.gdpost.aming.MyImageView
            android:id="@+id/c_recommend3"
            android:layout_width="wrap_content"	 android:scaleType="matrix"
            android:layout_height="wrap_content"	android:layout_margin="2dp"	
            android:src="@drawable/yc" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <com.gdpost.aming.MyImageView
                    android:id="@+id/c_joke"
                    android:layout_width="wrap_content"	 android:scaleType="matrix"
                    android:layout_height="wrap_content"	android:layout_margin="2dp"	
                    android:src="@drawable/tb" />
               <com.gdpost.aming.MyImageView
                    android:id="@+id/c_idea"
                    android:layout_width="wrap_content"	 android:scaleType="matrix"
                    android:layout_height="wrap_content"	android:layout_margin="2dp"	
                    android:src="@drawable/jsbe" />
            </LinearLayout>
            <com.gdpost.aming.MyImageView
                 android:id="@+id/c_constellation4"
                android:layout_width="wrap_content"	 android:scaleType="matrix"
                android:layout_height="wrap_content"	android:layout_margin="2dp"	
                android:src="@drawable/zyjk" />
            <com.gdpost.aming.MyImageView
                 android:id="@+id/c_constellation"
                android:layout_width="wrap_content"	 android:scaleType="matrix"
                android:layout_height="wrap_content"	android:layout_margin="2dp"	
                android:src="@drawable/zyhk" />
        </LinearLayout>
       <com.gdpost.aming.MyImageView
            android:id="@+id/c_recommend"
            android:layout_width="wrap_content"	 android:scaleType="matrix"
            android:layout_height="wrap_content"	android:layout_margin="2dp"	
            android:src="@drawable/bdbf" />
       

       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <com.gdpost.aming.MyImageView
                 android:id="@+id/c_constellation2"
                android:layout_width="wrap_content"	 android:scaleType="matrix"
                android:layout_height="wrap_content"	android:layout_margin="2dp"	
                android:src="@drawable/scjlq" />
            <com.gdpost.aming.MyImageView
                 android:id="@+id/c_constellation3"
                android:layout_width="wrap_content"	 android:scaleType="matrix"
                android:layout_height="wrap_content"	android:layout_margin="2dp"	
                android:src="@drawable/jfxxbg" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <com.gdpost.aming.MyImageView
                    android:id="@+id/c_joke2"
                    android:layout_width="wrap_content"	 android:scaleType="matrix"
                    android:layout_height="wrap_content"	android:layout_margin="2dp"	
                    android:src="@drawable/tbrbg" />
               <com.gdpost.aming.MyImageView
                    android:id="@+id/c_idea2"
                    android:layout_width="wrap_content"	 android:scaleType="matrix"
                    android:layout_height="wrap_content"	android:layout_margin="2dp"	
                    android:src="@drawable/syrbg" />
            </LinearLayout>
            
        </LinearLayout>
       <com.gdpost.aming.MyImageView
            android:id="@+id/c_recommend4"
            android:layout_width="wrap_content"	 android:scaleType="matrix"
            android:layout_height="wrap_content"	android:layout_margin="2dp"	
            android:src="@drawable/bottom" />
    </LinearLayout>

</LinearLayout>